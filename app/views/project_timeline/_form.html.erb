<%= form_with(model: task, local: true) do |form| %>

    <%= form.text_field :name, placeholder: "Task name" %><br>
    <%= form.text_field :description, placeholder: "Description" %><br>
    <%= form.date_select :start_date %><br>
    <%= form.date_select :end_date %><br>
    <%= form.hidden_field :project_timeline_id, :value => 1 %>

<%= form.submit %>

<% end %>