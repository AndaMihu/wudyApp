<%#= @company.inspect %>
<%= form_with(model: company, local: true) do |form| %>

<div id="company-info" >
    <h3>Company info </h3><br>

  <% if @company.name.nil? %>
  <%= form.text_field :name, placeholder: "Company name" %><br>
  <% else %>
  <%= form.text_field :name, value: @company.name %>
  <% end %><br>

  <%= form.label :industry %><br>

  <%= form.collection_select(:industry_id, @industry, :id, :name, :selected => params[:id]) %><br><br>

  <%= form.text_field :cvr, placeholder: "CVR" %><br>

  <%= form.text_field :company_address, placeholder: "Street name and number" %><br>

  <%= form.text_field :zip_code, placeholder: "Zip code" %><br>

  <%= form.text_field :city, placeholder: "City" %><br>

  <%= form.text_field :country, placeholder: "Country" %><br>

  <%= form.text_field :company_description, placeholder: "Company description" %><br>
  
  <%= form.text_field :employees_number, placeholder: "Employees number" %>

 <%= form.text_field :website, placeholder: "Website" %>


  </div>

<div id="internship-info" >
    <h3>Internship info </h3><br>

 <%= form.text_field :internship_description, placeholder: "Internship description" %>

 <%= fields_for :position do |f| %>
    <%= f.text_field :name, placeholder: "Position" %>
<% end %>

<%= form.text_field :available_spots, placeholder: "Available spots" %><br>


</div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
