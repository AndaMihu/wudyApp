<div class="st-heading">
<h1>Students list</h1>
<h3>Tip: use the filters to make your search faster and easier </h3>
</div>

<div id="students-list">
<table>
  <tr class="cl-title">
    <th>Name</th>
    <th>Email</th>
    <th>Study programme</th>
    <th>Internship company</th>
    <!--<th>Internship position</th>-->
    <th>Meetings</th>
  </tr>


<% @students.each do |student| %>
    <tr>
     <% if student.name.nil? %>
         <td> not set </td>
        <% else %>
        <td class="st-name"><%= link_to student.name, student %> </td>
        <% end %>

        <td> <%= student.email %></td>

        <% if student.programme_id.nil? %>
         <td> not defined yet </td>
        <% else %>
          <td> <%= student.programme.name %></td>
        <% end %>

         <div class="position">

        <% @company.each do |c| %>
         
            <td> <%= c.company_id %> </td>
        <% end %> 

      </div>
    

    
