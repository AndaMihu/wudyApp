<h1>Student list</h1>
<% if @students.empty? %>
<h2> You have no students assigned yet. </h2>

<% else %>
<% @students.each do |student| %>
    <div class="single-employee row">
      <div class="info col-xs-8 col-sm-10">
        
        <%= link_to student.name, student %> 
        <p class="spots"> <%= student.email %></p>
        <p class="industry"> <%= student.mobile_phone %></p>
        <p class="address"> <%= student.programme_id %></p>
    
      </div>
    </div>
  <% end %>

  <% end %>