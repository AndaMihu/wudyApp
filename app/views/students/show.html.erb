<div class="st-heading">
<h1>Student info</h1>
</div>

<div class="one-st"> 

<div class="info">

    <div class="personal">

        <p class="avatar">Profile picture: <%= image_tag @student.avatar.url(:medium) %>
        <p style="text-transform:capitalize"><%= @student.name %></p>
        <p><%= @student.email %></p>
        <p><%= @student.mobile_phone %></p>

     </div>

    <div class="uni">
    <h3>University</h3>
        <p style="text-transform:capitalize"><%= @student.programme.university.name %></p>
    </div>

    <div class="pro">
    <h3>Programme</h3>
    <p style="text-transform:capitalize"><%= @student.programme.name %></p>

    </div>
</div>

<div class="contact">


<div class="contact-btn">
<div class="meeting"> Meetings </div>
<%= link_to 'Contact', student_chats_path(@student), class:"contact" %>
<%= link_to 'Internship contract', student_contracts_path(@student), class:"contract" %>
</div>

<div class="meeting-box">
<h2> Booked meetings </h2><br>

<% if @event.nil? %>
<h3> You have no meetings booked with this student</h3>
<%else %>
<p>Meeting name: <%= @event.title %></p>
<p>Date: <%= @event.start %></p>
<% end %> 

<br><br>
<%= link_to 'Book a meeting', student_events_path(@student), class:"meeting" %>

</div>


</div>



</div> 