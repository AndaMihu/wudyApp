<%= simple_form_for @event, remote: true do |f| %>
  <div class="form-inputs">

    <%= f.input :title, placeholder: "Title" %>

    <%#= f.input :student_id, as: :select, collection: @students, :label_method => :name, :value_method => :id, :label => "Student", :include_blank => false %>
   
    <%#= f.simple_fields_for @student do |s| %>
    <%#= s.input :email, :input_html => { :value => "smth" } %>
    <%# end %>
   <%= f.input :student_id, :as => :hidden, :input_html => { :value => params[:id] } %>

    <%= f.input :date_range, input_html: { class: "form-control input-sm date-range-picker" } %>
    <%= f.input_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
    <%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
    <%= f.input :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']], :include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete', 
                event, 
                method: :delete, 
                class: 'btn btn-danger', 
                data: { confirm: 'Are you sure?' }, 
                remote: true unless @event.new_record? %>
  </div>
<% end %>
